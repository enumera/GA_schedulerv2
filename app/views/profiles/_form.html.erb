  <%= f.label :role_id %><br />
    <%= f.collection_select :role_id, Role.all, :id, :name %>
</div>
<% end %>
  <div class="field">
    <%= f.label :picture %><br />
    <%= f.file_field :picture %>
  </div>
 
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
