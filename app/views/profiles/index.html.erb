<h1>Profiles</h1>
<div class = "index_table">
<table>
  <tr>
    <th>Name</th>
    <th>Campus</th>
    <th>Role</th>
    <th>Picture</th>
    <th>Email</th>
    
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @profiles.each do |profile| %>
  <tr>
    <td><%= profile.name %></td>
    <td><%= profile.location.name %></td>
    <td><%= profile.role.name %></td>
   <td> <%= image_tag profile.picture.thumb %></td>
   <td> <%= profile.email %></td>
  
  
    <% if admin? then %>
     <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
    <td><%= link_to 'Delete', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <%end%>
  </tr>
<% end %>
</table>
</div>
<br />

<%= link_to 'New Profile', new_profile_path %>
