<h1>Listing cohorts</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Location</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Course</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cohorts.each do |cohort| %>
  <tr>
    <td><%= cohort.name %></td>
    <td><%= cohort.location.name %></td>
    <td><%= cohort.start_date %></td>
    <td><%= cohort.end_date %></td>
    <td><%= cohort.course_id %></td>
    <td><%= cohort.status_id %></td>
    <td><%= link_to 'Show', cohort %></td>
    <td><%= link_to 'Edit', edit_cohort_path(cohort) %></td>
    <td><%= link_to 'Destroy', cohort, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

