<!DOCTYPE html>
<html>
<head>
  <title>GaSchedulerv3</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<header>
    <%=image_tag('GA-Logo.png')%> <h1>SCHEDULER</h1>
  </header>
  <div>
    <nav>
        <ul>
          <li>
            <%=link_to 'Home', root_path %>
            <% if admin? then %>
            <%=link_to 'All GA Courses', cohorts_path %>
            <%=link_to 'Courses', courses_path %>
            <%=link_to 'Lessons', lessons_path %>
            <% end %>
            <% if admin? || producer? then %>
            <%=link_to 'Your cohorts', cohorts_path %>
            <%=link_to 'Your staff', cohorts_path %>
            <% end %>

          </li>
       
         
        </ul>

      </nav>
    </div>

<% if current_user %>
       <p> hello, <%= current_user.email %> </p>
       <%=link_to "Edit profile", my_profile_path %>
     
       <%= link_to 'Logout', logout_path, method: :delete, data: {confirm: "Are you sure?"} %>
      <% else %>
      <%= link_to 'Please sign up', signup_path %> <br />
       <%= link_to 'Please login', login_path %>
      <% end %>

  
<%= yield %>

</body>
</html>
